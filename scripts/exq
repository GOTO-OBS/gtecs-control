### Import ###
# Python modules
from __future__ import absolute_import
from __future__ import print_function
import os, sys
import readline
import time
import Pyro4
# TeCS modules
from gtecs.tecs_modules import misc
from gtecs.tecs_modules import params
from six.moves import range
from six.moves import input

########################################################################
# Exposure queue control functions
def get_info():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                info = exq.get_info()
                return info
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def take_image(tel_list,exptime,filt,bins,target='N/A',imgtype='SCIENCE'):
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT

            frametype = 'normal'
            try:
                c = exq.add(tel_list,exptime,filt,bins,frametype,target,imgtype)
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def take_dark(tel_list,exptime,bins):
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT

            filt = params.DARKFILT
            frametype = 'dark'
            target = 'N/A'
            imgtype = 'DARK'
            try:
                c = exq.add(tel_list,exptime,filt,bins,frametype,target,imgtype)
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def take_bias(tel_list,bins):
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT

            exptime = params.BIASEXP
            filt = params.DARKFILT
            frametype = 'dark'
            target = 'N/A'
            imgtype = 'BIAS'
            try:
                c = exq.add(tel_list,exptime,filt,bins,frametype,target,imgtype)
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def pause():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                c = exq.pause()
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def resume():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                c = exq.resume()
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def get_queue():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                queue_list = exq.get()
                print(queue_list)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def get_queue_summary():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                queue_list = exq.get_simple()
                print(queue_list)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

def clear():
    if not misc.daemon_is_running(daemon_ID):
        print(misc.ERROR('Daemon not running'))
    elif not misc.daemon_is_alive(daemon_ID):
        print(misc.ERROR('Daemon running but not responding, check logs'))
    else:
        with Pyro4.Proxy(DAEMON_ADDRESS) as exq:
            exq._pyroTimeout = params.PROXY_TIMEOUT
            try:
                c = exq.clear()
                if c: print(c)
            except Exception as e:
                print(misc.ERROR('Daemon returned {}: "{}"'.format(type(e).__name__, e)))

########################################################################
# Interactive mode
def interactive():
    while True:
        i_in = input('{}> '.format(daemon_ID)).split()
        if len(i_in) > 0:
            command, *args = i_in
            if command == 'q' or command == 'exit':
                return
            else:
                query(command, args)

def query(command, args):
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Primary control functions
    if command == 'start':
        misc.start_daemon(daemon_ID)
    elif command == 'shutdown':
        misc.shutdown_daemon(daemon_ID)
    elif command == 'kill':
        misc.kill_daemon(daemon_ID)
    elif command == 'ping':
        misc.ping_daemon(daemon_ID)
    elif command == 'help' or command == '?':
        print_instructions()
    elif command == 'i':
        print(misc.ERROR('Already in interactive mode'))

    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Camera control functions
    elif command == 'info':
        if len(args) == 0:
            info = get_info()
            if info:
                print_info_s(info)
            else:
                print(misc.ERROR('Problem retrieving info'))
        elif len(args) == 1 and args[0] in ['v','V','-v','-V']:
            info = get_info()
            if info:
                print_info(info)
            else:
                print(misc.ERROR('Problem retrieving info'))
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'image':
        if len(args) < 3:
            print(misc.ERROR('Need at least: exptime filter bins'))
        elif misc.is_num(args[0]) and misc.is_num(args[2]):
            # exptime filter bins [object] [imgtype]
            exptime = float(args[0])
            filt = args[1]
            bins = int(args[2])
            if len(args) == 3:
                take_image(list(params.TEL_DICT),exptime,filt,bins)
            elif len(args) == 4:
                target = args[3]
                take_image(list(params.TEL_DICT),exptime,filt,bins,target)
            elif len(args) == 5:
                target = args[3]
                imgtype = args[4]
                take_image(list(params.TEL_DICT),exptime,filt,bins,target,imgtype)
        elif misc.is_num(args[1]) and misc.is_num(args[3]):
            # tels exptime filter bins [object] [imgtype]
            valid = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            exptime = float(args[1])
            filt = args[2]
            bins = int(args[3])
            if len(args) == 4 and len(valid) > 0:
                take_image(valid,exptime,filt,bins)
            elif len(args) == 5 and len(valid) > 0:
                target = args[4]
                take_image(valid,exptime,filt,bins,target)
            elif len(args) == 6 and len(valid) > 0:
                target = args[4]
                imgtype = args[5]
                take_image(valid,exptime,filt,bins,target,imgtype)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'multimage':
        if len(args) < 4:
            print(misc.ERROR('Need at least: Nexp exptime filter bins'))
        elif misc.is_num(args[0]) and misc.is_num(args[1]) and misc.is_num(args[3]):
            # Nexp exptime filter bins [object] [imgtype]
            Nexp = int(args[0])
            exptime = float(args[1])
            filt = args[2]
            bins = int(args[3])
            if len(args) == 4:
                for i in range(Nexp):
                    take_image(list(params.TEL_DICT),exptime,filt,bins)
            elif len(args) == 5:
                target = args[4]
                for i in range(Nexp):
                    take_image(list(params.TEL_DICT),exptime,filt,bins,target)
            elif len(args) == 6:
                target = args[4]
                imgtype = args[5]
                for i in range(Nexp):
                    take_image(list(params.TEL_DICT),exptime,filt,bins,target,imgtype)
        elif misc.is_num(args[0]) and misc.is_num(args[2]) and misc.is_num(args[4]):
            # Nexp tels exptime filter bins [object] [imgtype]
            Nexp = int(args[0])
            valid = misc.valid_ints(args[1].split(','),list(params.TEL_DICT))
            exptime = float(args[2])
            filt = args[3]
            bins = int(args[4])
            if len(args) == 5 and len(valid) > 0:
                for i in range(Nexp):
                    take_image(valid,exptime,filt,bins)
            elif len(args) == 6 and len(valid) > 0:
                target = args[5]
                for i in range(Nexp):
                    take_image(valid,exptime,filt,bins,target)
            elif len(args) == 7 and len(valid) > 0:
                target = args[5]
                imgtype = args[6]
                for i in range(Nexp):
                    take_image(valid,exptime,filt,bins,target,imgtype)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'dark':
        if len(args) < 2:
            print(misc.ERROR('Need at least: exptime bins'))
        elif misc.is_num(args[0]) and misc.is_num(args[1]) and len(args) == 2:
            # exptime bins
            exptime = float(args[0])
            bins = int(args[1])
            take_dark(list(params.TEL_DICT),exptime,bins)
        elif misc.is_num(args[1]) and misc.is_num(args[2]) and len(args) == 3:
            # tels exptime bins
            valid = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            exptime = float(args[1])
            bins = int(args[2])
            if len(valid) > 0:
                take_dark(valid,exptime,bins)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'multdark':
        if len(args) < 3:
            print(misc.ERROR('Need at least: exptime bins'))
        elif misc.is_num(args[1]) and misc.is_num(args[2]) and len(args) == 3:
            # Nexp exptime bins
            Nexp = int(args[0])
            exptime = float(args[1])
            bins = int(args[2])
            for i in range(Nexp):
                take_dark(list(params.TEL_DICT),exptime,bins)
        elif misc.is_num(args[2]) and misc.is_num(args[3]) and len(args) == 4:
            # Nexp tels exptime bins
            Nexp = int(args[0])
            valid = misc.valid_ints(args[1].split(','),list(params.TEL_DICT))
            exptime = float(args[2])
            bins = int(args[3])
            if len(valid) > 0:
                for i in range(Nexp):
                    take_dark(valid,exptime,bins)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'bias':
        if len(args) < 1:
            print(misc.ERROR('Need at least: bins'))
        elif misc.is_num(args[0]) and len(args) == 1:
            # bins
            bins = int(args[0])
            take_bias(list(params.TEL_DICT),bins)
        elif misc.is_num(args[1]) and len(args) == 2:
            # tels bins
            valid = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            bins = int(args[1])
            if len(valid) > 0:
                take_bias(valid,bins)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'multbias':
        if len(args) < 2:
            print(misc.ERROR('Need at least: bins'))
        elif misc.is_num(args[1]) and len(args) == 2:
            # Nexp bins
            Nexp = int(args[0])
            bins = int(args[1])
            for i in range(Nexp):
                take_bias(list(params.TEL_DICT),bins)
        elif misc.is_num(args[2]) and len(args) == 3:
            # Nexp tels bins
            Nexp = int(args[0])
            valid = misc.valid_ints(args[1].split(','),list(params.TEL_DICT))
            bins = int(args[2])
            if len(valid) > 0:
                for i in range(Nexp):
                    take_bias(valid,bins)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'pause':
        pause()
    elif command == 'resume' or command == 'unpause':
        resume()
    elif command == 'get' or command == 'list' or command == 'ls':
        if len(args) == 0:
            get_queue_summary()
        elif len(args) == 1 and args[0] in ['v','V','-v','-V']:
            get_queue()
        else:
            print(misc.ERROR('Invalid arguments'))
    elif command == 'clear':
        clear()

    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Unrecognized function
    else:
        print(misc.ERROR('Unrecognized command "%s"' %command))

def print_info(info):
    print('####### QUEUE INFO #######')
    print('Status: %s' %info['status'])
    print('~~~~~~~')
    print('Current exposure:')
    try:
        print('   %i: %i, %i, %s, %i, %s, %s, %s' \
            %(info['current_run_ID'], info['current_tel'], info['current_exptime'], info['current_filter'], info['current_bins'], info['current_frametype'], info['current_target'], info['current_imgtype']))
    except:
        print('   None')
    print('Items in queue:     %s' %info['queue_length'])
    print('~~~~~~~')
    print('Uptime: %.1fs' %info['uptime'])
    print('Ping: %.3fs' %info['ping'])
    print('Timestamp: %s' %info['timestamp'])
    print('###########################')

def print_info_s(info):
    print('QUEUE: [%s]' %info['status'])
    print('  Current exposure:', end=' ')
    try:
        print('   %i: %r, %i, %s, %i, %s, %s, %s' \
            %(info['current_run_ID'], info['current_tel_list'], info['current_exptime'], info['current_filter'], info['current_bins'], info['current_frametype'], info['current_target'], info['current_imgtype']))
    except:
        print('None')
    print('  Items in queue: %s' %info['queue_length'])

def print_instructions():
    help_str = misc.bold('Usage:') + ' exq [command]' + '\n' +\
    ' ' + misc.undl('Daemon commands') + ':' + '\n' +\
    '  exq ' + misc.bold('start') + '          - start the daemon' + '\n' +\
    '  exq ' + misc.bold('shutdown') + '       - shutdown the daemon' + '\n' +\
    '  exq ' + misc.bold('kill') + '           - kill the daemon (' + misc.rtxt('emergency use') + ')' + '\n' +\
    '  exq ' + misc.bold('ping') + '           - ping the daemon' + '\n' +\
    ' ' + misc.undl('Exposure queue commands') + ':' + '\n' +\
    '  exq ' + misc.bold('image') + ' [tels] exptime filter bins [object] [imgtype]' + '\n' +\
    '  exq ' + misc.bold('multimage') + ' Nexp [tels] exptime filter bins [object] [imgtype]' + '\n' +\
    '  exq ' + misc.bold('dark') + '  [tels] exptime bins' + '\n' +\
    '  exq ' + misc.bold('multdark') + ' Nexp [tels] exptime bins' + '\n' +\
    '  exq ' + misc.bold('bias') + '  [tels] bins' + '\n' +\
    '  exq ' + misc.bold('multbias') + ' Nexp [tels] bins' + '\n' +\
    '  exq ' + misc.bold('pause') + '          - pause taking exposures' + '\n' +\
    '  exq ' + misc.bold('unpause') + '/' + misc.bold('resume') + ' - resumes taking exposures' + '\n' +\
    '  exq ' + misc.bold('list') + ' [v]' + '       - lists the current queue' + '\n' +\
    '  exq ' + misc.bold('clear') + '          - empty the queue' + '\n' +\
    '  exq ' + misc.bold('info') + ' [v]' + '       - report current status' + '\n' +\
    ' ' + misc.undl('Control commands') + ':' + '\n' +\
    '  exq ' + misc.bold('i') + '              - enter interactive mode' + '\n' +\
    '  exq ' + misc.bold('q') + '/' + misc.bold('exit') + '         - quit interactive mode' + '\n' +\
    '  exq ' + misc.bold('?') + '/' + misc.bold('help') + '         - print these instructions'
    print(help_str)

########################################################################
# Control system

daemon_ID = os.path.basename(__file__)

if len(sys.argv) == 1:
    print_instructions()
else:
    DAEMON_ADDRESS = params.DAEMONS[daemon_ID]['ADDRESS']
    command, *args = sys.argv[1:]
    if command == 'i':
        interactive()
    else:
        query(command, args)
