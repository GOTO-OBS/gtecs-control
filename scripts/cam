#!/usr/bin/env python

########################################################################
#                                cam.py                                #
#           ~~~~~~~~~~~~~~~~~~~~~~~##~~~~~~~~~~~~~~~~~~~~~~~           #
#           G-TeCS script to provide control over cam_daemon           #
#                    Martin Dyer, Sheffield, 2015-16                   #
#           ~~~~~~~~~~~~~~~~~~~~~~~##~~~~~~~~~~~~~~~~~~~~~~~           #
#                   Based on the SLODAR/pt5m system                    #
########################################################################

### Import ###
# Python modules
from __future__ import absolute_import
from __future__ import print_function
import os, sys
import readline
import time
import Pyro4
from six.moves import input
# TeCS modules
from gtecs.tecs_modules import misc
from gtecs.tecs_modules import params
from gtecs.tecs_modules import daemons

########################################################################
# Interactive functions

def interactive():
    while True:
        i_in = input('{}> '.format(daemon_ID)).split()
        if len(i_in) > 0:
            command, *args = i_in
            if command == 'q' or command == 'exit':
                return
            else:
                query(command, args)

def query(command, args):
    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Primary control functions
    if command == 'start':
        daemons.start_daemon(daemon_ID)
    elif command == 'shutdown':
        daemons.shutdown_daemon(daemon_ID)
    elif command == 'kill':
        daemons.kill_daemon(daemon_ID)
    elif command == 'ping':
        daemons.ping_daemon(daemon_ID)
    elif command == 'help' or command == '?':
        print_instructions()
    elif command == 'i':
        print(misc.ERROR('Already in interactive mode'))

    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Camera control functions
    elif command == 'info':
        if len(args) == 0:
            info = daemons.daemon_function(daemon_ID, 'get_info')
            if info: print_info_s(info)
        elif len(args) == 1 and args[0] in ['v','V','-v','-V']:
            info = daemons.daemon_function(daemon_ID, 'get_info')
            if info: print_info(info)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'image':
        if len(args) == 1 and misc.is_num(args[0]):
            exptime = float(args[0])
            HW_list = list(params.TEL_DICT)
            spec = ['NA', 'SCIENCE', 1, 1]
            daemons.daemon_function(daemon_ID, 'set_spec', spec)
            c = daemons.daemon_function(daemon_ID, 'take_image', [exptime, HW_list])
            if c: print(c)

        elif len(args) == 2 and misc.is_num(args[1]):
            exptime = float(args[1])
            HW_list = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                spec = ['NA', 'SCIENCE', 1, 1]
                daemons.daemon_function(daemon_ID, 'set_spec', spec)
                c = daemons.daemon_function(daemon_ID, 'take_image', [exptime, HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'dark':
        if len(args) == 1 and misc.is_num(args[0]):
            exptime = float(args[0])
            HW_list = list(params.TEL_DICT)
            spec = ['NA', 'DARK', 1, 1]
            daemons.daemon_function(daemon_ID, 'set_spec', spec)
            c = daemons.daemon_function(daemon_ID, 'take_dark', [exptime, HW_list])
            if c: print(c)
        elif len(args) == 2 and misc.is_num(args[1]):
            exptime = float(args[1])
            HW_list = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                spec = ['NA', 'DARK', 1, 1]
                daemons.daemon_function(daemon_ID, 'set_spec', spec)
                c = daemons.daemon_function(daemon_ID, 'take_dark', [exptime, HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'bias':
        if len(args) == 0:
            HW_list = list(params.TEL_DICT)
            spec = ['NA', 'BIAS', 1, 1]
            daemons.daemon_function(daemon_ID, 'set_spec', spec)
            c = daemons.daemon_function(daemon_ID, 'take_bias', [HW_list])
            if c: print(c)
        elif len(args) == 1:
            HW_list = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                spec = ['NA', 'BIAS', 1, 1]
                daemons.daemon_function(daemon_ID, 'set_spec', spec)
                c = daemons.daemon_function(daemon_ID, 'take_bias', [HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'abort':
        if len(args) == 0:
            HW_list = list(params.TEL_DICT)
            c = daemons.daemon_function(daemon_ID, 'abort_exposure', [HW_list])
            if c: print(c)
        elif len(args) == 1:
            HW_list = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                c = daemons.daemon_function(daemon_ID, 'abort_exposure', [HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command == 'temp':
        if len(args) == 1 and misc.is_num(args[0]):
            target_temp = float(args[0])
            HW_list     = list(params.TEL_DICT)
            c = daemons.daemon_function(daemon_ID, 'set_temperature', [target_temp, HW_list])
            if c: print(c)
        elif len(args) == 2 and misc.is_num(args[1]):
            target_temp = float(args[1])
            HW_list     = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                c = daemons.daemon_function(daemon_ID, 'set_temperature', [target_temp, HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    elif command in ['bin', 'bins', 'binning']:
        if len(args) == 1 and misc.is_num(args[0]):
            binning = int(args[0])
            HW_list = list(params.TEL_DICT)
            c = daemons.daemon_function(daemon_ID, 'set_binning', [binning, HW_list])
            if c: print(c)
        elif len(args) == 2 and misc.is_num(args[1]):
            binning = int(args[1])
            HW_list = misc.valid_ints(args[0].split(','),list(params.TEL_DICT))
            if len(HW_list) > 0:
                c = daemons.daemon_function(daemon_ID, 'set_binning', [binning, HW_list])
                if c: print(c)
        else:
            print(misc.ERROR('Invalid arguments'))

    #~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    # Unrecognized function
    else:
        print(misc.ERROR('Unrecognized command "%s"' %command))

########################################################################
# Output formatting functions

def print_info(info):
    print('####### CAMERA INFO #######')
    for tel in params.TEL_DICT:
        print('CAMERA ' + str(tel) + ' (%s-%i)'%tuple(params.TEL_DICT[tel]))
        if info['status'+str(tel)] != 'Exposing':
            print('Status: %s' %info['status'+str(tel)])
        else:
            print('Status: %s %06d (%.2f)' %(info['status'+str(tel)],info['run_number'],info['remaining'+str(tel)]))
        print('Frame type:       %s' %info['frametype'+str(tel)])
        print('Exposure time:    %.2fs' %info['exptime'+str(tel)])
        print('Binning:          %i' %(info['binning'+str(tel)]))
        print('CCD Temperature:  %.2fC' %info['ccd_temp'+str(tel)])
        print('Base Temperature: %.2fC' %info['base_temp'+str(tel)])
        print('Cooler power:     %i%%' %info['cooler_power'+str(tel)])
        print('Serial number:    %s' %info['serial_number'+str(tel)])
        print('~~~~~~~')
    print('Uptime: %.1fs' %info['uptime'])
    print('Ping: %.5fs' %info['ping'])
    print('Timestamp: %s' %info['timestamp'])
    print('###########################')

def print_info_s(info):
    for tel in params.TEL_DICT:
        print('CAMERA ' + str(tel) + ' (%s-%i)'%tuple(params.TEL_DICT[tel]), end=' ')
        if info['status'+str(tel)] != 'Exposing':
            print('  Temp: %6.2fC' %info['ccd_temp'+str(tel)], end=' ')
            print('  [%s]' %info['status'+str(tel)])
        else:
            print('  %s %06d (%.2f)' %(info['status'+str(tel)],info['run_number'],info['remaining'+str(tel)]))

def print_instructions():
    help_str = misc.bold('Usage:') + ' cam [command]' + '\n' +\
    ' ' + misc.undl('Daemon commands') + ':' + '\n' +\
    '  cam ' + misc.bold('start') + '                - start the daemon' + '\n' +\
    '  cam ' + misc.bold('shutdown') + '             - shutdown the daemon' + '\n' +\
    '  cam ' + misc.bold('kill') + '                 - kill the daemon (' + misc.rtxt('emergency use') + ')' + '\n' +\
    '  cam ' + misc.bold('ping') + '                 - ping the daemon' + '\n' +\
    ' ' + misc.undl('Camera commands') + ':' + '\n' +\
    '  cam ' + misc.bold('image') + ' [tels] exptime' + ' - take a normal exposure' + '\n' +\
    '  cam ' + misc.bold('dark') + ' [tels] exptime' + '  - take a dark frame' + '\n' +\
    '  cam ' + misc.bold('bias') + ' [tels]' + '          - take a bias frame' + '\n' +\
    '  cam ' + misc.bold('abort') + ' [tels]' + '         - abort current exposure' + '\n' +\
    '  cam ' + misc.bold('bin') + ' [tels] binning' + '   - set binning factor' + '\n' +\
    '  cam ' + misc.bold('temp') + ' [tels] temp' + '     - set camera temperature' + '\n' +\
    '  cam ' + misc.bold('info') + ' [v]' + '             - report current status' + '\n' +\
    ' ' + misc.undl('Control commands') + ':' + '\n' +\
    '  cam ' + misc.bold('i') + '                    - enter interactive mode' + '\n' +\
    '  cam ' + misc.bold('q') + '/' + misc.bold('exit') + '               - quit interactive mode' + '\n' +\
    '  cam ' + misc.bold('?') + '/' + misc.bold('help') + '               - print these instructions'
    print(help_str)

########################################################################

daemon_ID = os.path.basename(__file__)

if len(sys.argv) == 1:
    print_instructions()
else:
    command, *args = sys.argv[1:]
    if command == 'i':
        interactive()
    else:
        query(command, args)
