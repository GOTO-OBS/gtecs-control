#!/usr/bin/env python

import json

from gtecs import params

username = input('Please enter your name for the record: ')
if len(username) == 0:
    username = 'Unknown'
with open(params.CONFIG_PATH + 'observer', 'w') as f:
    f.write(username)
print('Thank you "{}", everything will now be blamed on you'.format(username))

with open(params.CONFIG_PATH + 'overrides_flags', 'r') as f:
    data = json.load(f)
    data['robotic'] = 1 # Set override to True
with open(params.CONFIG_PATH + 'overrides_flags', 'w') as f:
    json.dump(data, f)

print('System now in Manual mode, you are in control')
