#!/usr/bin/env python
"""A script to provide control over the foc daemon."""

import os
import sys

from gtecs import daemons
from gtecs import errors
from gtecs import misc
from gtecs import params


DAEMON_ID = os.path.basename(__file__)


def query(command, args, daemon_id):
    """Process a query."""
    # Command functions
    if command in ['help', '?']:
        print_instructions()

    elif command == 'i':
        raise errors.InputError('Already in interactive mode')

    # Primary daemon control
    elif command == 'start':
        reply = daemons.start_daemon(daemon_id)
        print(reply)

    elif command == 'shutdown':
        reply = daemons.shutdown_daemon(daemon_id)
        print(reply)

    elif command == 'restart':
        reply = daemons.restart_daemon(daemon_id)
        print(reply)

    elif command == 'kill':
        reply = daemons.kill_daemon(daemon_id)
        print(reply)

    elif command in ['check', 'ping']:
        reply = daemons.check_daemon(daemon_id)
        print(reply)

    elif command in ['info', 'status']:
        # parse arguments
        if len(args) == 0:
            info_type = 'simple'
        elif len(args) == 1 and args[0] in ['v', 'V', '-v', '-V']:
            info_type = 'verbose'
        else:
            raise errors.InputError('Invalid arguments')
        # send command
        reply = daemons.daemon_function(daemon_id, 'get_info', args=[False])
        # print response
        if not reply:
            raise ValueError('No info returned, check daemon')
        elif info_type == 'simple':
            print_info_s(reply)
        elif info_type == 'verbose':
            print_info(reply)

    elif command in ['log', 'tail']:
        # parse arguments
        if 'stdout' in args:
            log_file = daemon_id + '-stdout.log'
            args.remove('stdout')
        else:
            log_file = daemon_id + '.log'
        log_path = os.path.join(params.LOG_PATH, log_file)
        tail_command = 'tail {} {}'.format(log_path, ' '.join(args))
        # send command
        misc.execute_long_command(tail_command)

    # Daemon functions
    elif command == 'set':
        # parse arguments
        if len(args) == 1 and misc.is_num(args[0]):
            ut_list = sorted(params.UT_DICT)
            pos = int(args[0])
        elif len(args) == 2 and misc.is_num(args[1]):
            ut_list = misc.valid_ints(args[0].split(','), sorted(params.UT_DICT))
            pos = int(args[1])
        else:
            raise errors.InputError('Invalid arguments')
        # send command
        reply = daemons.daemon_function(daemon_id, 'set_focuser', [pos, ut_list])
        print(reply)

    elif command == 'move':
        # parse arguments
        if len(args) == 1 and misc.is_num(args[0]):
            ut_list = sorted(params.UT_DICT)
            steps = int(args[0])
        elif len(args) == 2 and misc.is_num(args[1]):
            ut_list = misc.valid_ints(args[0].split(','), sorted(params.UT_DICT))
            steps = int(args[1])
        else:
            raise errors.InputError('Invalid arguments')
        # send command
        reply = daemons.daemon_function(daemon_id, 'move_focuser', [steps, ut_list])
        print(reply)

    elif command == 'home':
        # parse arguments
        if len(args) == 0:
            ut_list = sorted(params.UT_DICT)
        elif len(args) == 1:
            ut_list = misc.valid_ints(args[0].split(','), sorted(params.UT_DICT))
        else:
            raise errors.InputError('Invalid arguments')
        # send command
        reply = daemons.daemon_function(daemon_id, 'home_focuser', [ut_list])
        print(reply)

    # Unrecognized function
    else:
        raise errors.InputError('Unrecognized command "{}"'.format(command))


def print_info(info):
    """Print the full info dict."""
    print('###### FOCUSER INFO #######')
    for ut in sorted(params.UT_DICT):
        print('FOCUSER ' + str(ut) + ' (%s)' % params.UT_DICT[ut])
        if info[ut]['status'] != 'Moving':
            print('Status: %s' % info[ut]['status'])
        else:
            print('Status: %s (%i)' % (info[ut]['status'], info[ut]['remaining']))
        print('Current motor pos:    %s' % info[ut]['current_pos'])
        print('Maximum motor limit:  %s' % info[ut]['limit'])
        print('Internal temperature: %s' % info[ut]['int_temp'])
        print('External temperature: %s' % info[ut]['ext_temp'])
        print('Serial number:        %s' % info[ut]['serial_number'])
        print('~~~~~~~')
    print('Uptime: %.1fs' % info['uptime'])
    print('Timestamp: %s' % info['timestamp'])
    print('###########################')


def print_info_s(info):
    """Print the info dict in a compact way."""
    for ut in sorted(params.UT_DICT):
        print('FOCUSER ' + str(ut) + ' (%s)' % params.UT_DICT[ut], end=' ')
        if info[ut]['status'] != 'Moving':
            print('  Current position: %s/%s' % (info[ut]['current_pos'],
                                                 info[ut]['limit']), end=' ')
            print('  [%s]' % info[ut]['status'])
        else:
            print('  %s (%i)' % (info[ut]['status'], info[ut]['remaining']))


def print_instructions():
    """Print instructions for using the daemon."""
    print('Usage: foc command [options]',
          'Daemon commands:',
          '  start                          start the daemon',
          '  shutdown                       shutdown the daemon',
          '  restart                        restart the daemon',
          '  kill                           kill the daemon',
          '  check/ping                     check the daemon for errors',
          'Focuser commands:',
          '  move [uts] steps              move by the given steps',
          '  set [uts] pos                 move to the given position',
          '  home [uts]                    move to the home position',
          '  info/status [v]                report current status',
          '  log [stdout]                   print daemon log (tail alias)',
          'Control commands:',
          '  i                              enter interactive mode',
          '  q/exit                         quit interactive mode',
          '  ?/help                         print these instructions',
          sep='\n')


if __name__ == "__main__":
    if len(sys.argv) == 1:
        print_instructions()
    else:
        command, *args = sys.argv[1:]
        if command == 'i':
            while True:
                interactive_input = input('{}> '.format(DAEMON_ID)).split()
                if len(interactive_input) > 0:
                    command, *args = interactive_input
                    if command in ['q', 'exit']:
                        break
                    else:
                        with misc.print_errors():
                            query(command, args, DAEMON_ID)
        else:
            with misc.print_errors():
                query(command, args, DAEMON_ID)
